{
  "name": "@proton/mnemonic",
  "author": "Metallicus",
  "module": "dist/mnemonic.esm.js",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "npx tsdx watch",
    "build": "npx tsdx build",
    "test": "npx tsdx test",
    "lint": "npx tsdx lint",
    "prepare": "npx tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/mnemonic.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/mnemonic.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^27.4.1",
    "husky": "^7.0.1",
    "size-limit": "^5.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typedoc": "^0.21.4",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@jafri/isomorphic-webcrypto": "2.3.8",
    "@proton/js": "^27.9.1",
    "@scure/bip32": "^1.3.0",
    "@scure/bip39": "^1.2.0"
  }
}
